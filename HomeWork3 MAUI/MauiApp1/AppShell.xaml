<?xml version="1.0" encoding="UTF-8" ?>
<Shell 
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1.View">

    <TabBar x:Name="MyTabBar">
        <Tab Title="Calendar" Icon="calendar1.png">
            <ShellContent ContentTemplate="{DataTemplate local:CalendarPage}"/>
        </Tab>
        <Tab Title="Notes" Icon="notes.png">
            <ShellContent ContentTemplate="{DataTemplate local:NotesPage}"/>
        </Tab>
        <Tab Title="Search" Icon="search.png">
            <ShellContent ContentTemplate="{DataTemplate local:SearchPage}"/>
        </Tab>
    </TabBar>

</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.View.NotesPage">
    
    <VerticalStackLayout Padding="15">

        <HorizontalStackLayout  Spacing="180">

            <Label Text="  Notes" TextColor="Black" FontSize="25" />

            <Button Text="add" TextColor="Black" FontSize="18" BorderWidth="0" BackgroundColor="White" Clicked="OnButton_Clicked"/>

        </HorizontalStackLayout>

        <CollectionView x:Name="notesCollectionView" ItemsSource="{Binding notes}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding TitleNote}"/>
                        <Label Text="{Binding TextNote}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.View.AdditionalNotePage"
             Title="AdditionalNotePage">
    
    <VerticalStackLayout Padding="15" >
        
        <Editor Placeholder = "Enter note (2000 symbols)" FontSize="22" AutoSize="TextChanges" MaximumHeightRequest="2000"/>

        <Button Text="SAVE" TextColor="Black" FontSize="18" BackgroundColor="LightCoral" 
                HorizontalOptions="Center" VerticalOptions="Center" BorderWidth="0.5"/>

    </VerticalStackLayout>
    
</ContentPage>